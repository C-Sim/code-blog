<div class="list-group comment-group">
  <div class="list-group-item list-group-item-action" aria-current="true">
    <div class="d-flex w-100 justify-content-between">
      <h6 class="mb-1">{{user.username}}</h6><small>{{formatDate createdAt}}</small>
    </div>
    {{#if (isEqualTo parent.currentUser user.id)}}
    <form class="mt-4" id="comment-edit-form" data-blog-id="{{blogId}}" data-id="{{id}}">

    <input type="text"
      class="form-control mb-2"
      id="comment" 
      value="{{content}}"
      placeholder="Enter comment">
    </input>
    
    <div id="comment-edit-error"></div>


    <div class="d-flex justify-content-center">
    <button
      type="submit"
      id="update-comment-btn"
      class="btn btn-secondary m-1"
    >Update</button>
    <button
      type="button"
      id="delete-comment-btn"
      data-id="{{id}}"
      data-blog-id="{{blogId}}"
      class="btn btn-danger m-1"
    >Delete</button>
    </div>
    </form>

    {{else}}
    <p class="mb-1">{{content}}</p>

    {{/if}}
  </div>

</div>